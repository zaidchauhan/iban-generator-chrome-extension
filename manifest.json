{
    "name": "IBAN-Generator",
    "version": "0.6",
    "description": "Generate random IBAN which copied to clipboard. Based on https://en.wikipedia.org/wiki/International_Bank_Account_Number",
    "manifest_version": 2,
    "permissions": [
        "clipboardWrite",
        "notifications",
        "contextMenus",
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "static-content/iban-blue.png",
        "48": "static-content/iban-blue.png"
    },
    "browser_action": {
        "default_title": "Random IBAN Gnerator",
        "default_icon": "/static-content/iban-blue.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_ui": {
    "page": "options-page.html",
    "chrome_style": true,
    "open_in_tab": true
  }
}
